<resources>
    <!-- Base application theme. -->
    <style name="Theme.OpenEye" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--获取焦点时，文本框，复选框等颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Theme.OpenEye.FollowTextView">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">@drawable/shape_follow_radius_black_2dp_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/plus_follow</item>
        <item name="android:textSize">10sp</item>
        <item name="typeface">fzdb1Typeface</item>
    </style>

    <style name="Theme.OpenEye.VideoDurationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">3.5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingEnd">3.5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/shape_time_radius_black_2dp_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="typeface">dinTypeface</item>
    </style>

    <style name="Theme.OpenEye.SettingTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="typeface">fzlLTypeface</item>
    </style>

    <style name="Theme.OpenEye.MineTextView" parent="Theme.OpenEye.SettingTextView">
        <item name="android:layout_height">25.5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>

    <style name="Theme.OpenEye.SplashActivity">
        <item name="android:windowBackground">@drawable/bg_splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>